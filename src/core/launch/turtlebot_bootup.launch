<?xml version="1.0"?>
<launch>
    <node name="master_discovery" pkg="master_discovery_fkie" type="master_discovery" args="_mcast_group:=224.0.0.1" respawn="true"/>
    <node name="master_sync" pkg="master_sync_fkie" type="master_sync" respawn="true"/>

    <group ns="$(env ROS_HOSTNAME)">

        <include ns="$(env ROS_HOSTNAME)" file="$(find turtlebot3_bringup)/launch/turtlebot3_robot.launch"/>

        <node ns="$(env ROS_HOSTNAME)" name="behaviour_aserver" pkg="core" type="aserver.py" args="srv_timeout:=60" respawn="true"/>

    </group>
</launch>
